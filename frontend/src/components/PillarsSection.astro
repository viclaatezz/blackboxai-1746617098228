---
import { onMount } from 'solid-js';
---

<style>
  .pillars {
    background-color: #0f172a; /* Deep Navy */
    padding: 4rem 1rem;
    color: #22d3ee; /* Cyan Electric */
    text-align: center;
  }
  .pillars h2 {
    font-size: 2.5rem;
    font-weight: 900;
    margin-bottom: 2rem;
  }
  .pillar-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
    gap: 2rem;
    max-width: 1000px;
    margin: 0 auto;
  }
  .pillar {
    background: rgba(34, 211, 238, 0.1);
    border: 2px solid #22d3ee;
    border-radius: 1rem;
    padding: 2rem;
    box-shadow: 0 0 10px #22d3eeaa;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    cursor: pointer;
  }
  .pillar:hover {
    transform: translateY(-10px) rotateX(10deg);
    box-shadow: 0 0 20px #22d3eecc;
  }
  .pillar svg {
    width: 48px;
    height: 48px;
    margin-bottom: 1rem;
    stroke: #22d3ee;
    stroke-width: 2;
    fill: none;
  }
  .pillar h3 {
    font-size: 1.25rem;
    font-weight: 700;
    margin-bottom: 0.5rem;
  }
  .pillar p {
    font-size: 1rem;
    line-height: 1.4;
  }
</style>

<section class="pillars" id="pillars">
  <h2>Core Pillars of Flop</h2>
  <div class="pillar-grid">
    <div class="pillar" tabindex="0" aria-label="Comprehensive Portfolio Management">
      <svg viewBox="0 0 24 24" aria-hidden="true" focusable="false">
        <circle cx="12" cy="12" r="10" />
        <path d="M8 12l2 2 4-4" />
      </svg>
      <h3>Comprehensive Portfolio Management</h3>
      <p>Manage multiple portfolios with ease and track your crypto assets efficiently.</p>
    </div>
    <div class="pillar" tabindex="0" aria-label="Real-time Market Data">
      <svg viewBox="0 0 24 24" aria-hidden="true" focusable="false">
        <rect x="3" y="3" width="18" height="18" rx="2" ry="2" />
        <path d="M3 12h18" />
        <path d="M12 3v18" />
      </svg>
      <h3>Real-time Market Data</h3>
      <p>Stay updated with live prices and market trends from trusted sources.</p>
    </div>
    <div class="pillar" tabindex="0" aria-label="Advanced Analytics">
      <svg viewBox="0 0 24 24" aria-hidden="true" focusable="false">
        <path d="M4 17h16M4 12h8M4 7h12" />
      </svg>
      <h3>Advanced Analytics</h3>
      <p>Gain insights with detailed profit/loss calculations and portfolio statistics.</p>
    </div>
    <div class="pillar" tabindex="0" aria-label="Custom Alerts & Notifications">
      <svg viewBox="0 0 24 24" aria-hidden="true" focusable="false">
        <path d="M12 22a2 2 0 0 0 2-2H10a2 2 0 0 0 2 2z" />
        <path d="M18 8a6 6 0 0 0-12 0v5H4l4 4h8l4-4h-2z" />
      </svg>
      <h3>Custom Alerts & Notifications</h3>
      <p>Set price alerts and get notified instantly via email.</p>
    </div>
  </div>
</section>

<script type="module" is:inline>
  import gsap from 'gsap';
  import { ScrollTrigger } from 'gsap/ScrollTrigger';
  gsap.registerPlugin(ScrollTrigger);

  onMount(() => {
    gsap.from('.pillar', {
      opacity: 0,
      y: 50,
      stagger: 0.2,
      duration: 1,
      ease: 'power3.out',
      scrollTrigger: {
        trigger: '#pillars',
        start: 'top 80%',
      }
    });
  });
</script>
